<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_gradient"
    android:fitsSystemWindows="true"
    tools:context=".activity.MainActivity" >

    <LinearLayout
        android:id="@+id/credentials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/msg_welcome"
            android:textSize="24sp"
            android:textColor="@color/sunset_orange" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="italic" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/logout_button"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/credentials"
        android:background="@drawable/button_color_selection"
        android:text="@string/placeholder_1"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignTop="@id/button"
        android:layout_alignEnd="@+id/logout_button"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/credentials"
        android:background="@drawable/button_color_selection"
        android:text="@string/placeholder_2"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/button"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/button"
        android:background="@drawable/button_color_selection"
        android:text="@string/placeholder_3"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/logout_button"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/button2"
        android:background="@drawable/button_color_selection"
        android:text="@string/placeholder_4"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/button_color"
        android:text="@string/btn_logout"
        android:textColor="@android:color/white"/>
</RelativeLayout>